{
  "extends": "erb",
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "flowtype/no-weak-types": [
      2,
      {
        "any": false,
        "Object": false,
        "Function": true
      }
    ],
    "import/prefer-default-export": "off",
    "no-shadow": "off"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "configs/webpack.config.eslint.js"
      }
    }
  }
}

